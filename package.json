{
  "name": "asset-management-system",
  "version": "1.0.0",
  "description": "Asset Management System app",
  "author": "Kavishka Chathu <kavishka@example.com>",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder --publish never"
  },
  "devDependencies": {
    "electron": "^25.9.8",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.kavishka.assetmanagement",
    "productName": "Asset Management System",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/tealogo.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "AssetManagementSystem"
    }
  },
  "dependencies": {
    "jspdf": "^3.0.1",
    "mysql2": "^3.14.3"
  }
}